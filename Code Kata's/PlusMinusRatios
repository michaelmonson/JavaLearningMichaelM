import java.io.*;
import java.math.*;
import java.security.*;
import java.text.*;
import java.util.*;
import java.util.concurrent.*;
import java.util.function.*;
import java.util.regex.*;
import java.util.stream.*;
import static java.util.stream.Collectors.joining;
import static java.util.stream.Collectors.toList;

class Result {

    /*
     * Complete the 'plusMinus' function below.
     *
     * The function accepts INTEGER_ARRAY arr as parameter.
     */

    public static void plusMinus(List<Integer> arrayIntegers) {
        // Write your code here
        int ePositive = 0, eNegative = 0, eZero = 0;
        for (int arrayValue: arrayIntegers) {
            if (arrayValue > 0) {
                ePositive++;
            } else if (arrayValue < 0) {
                eNegative++;
            } else {
                eZero++;
            }
        }
        
        //Output results using String.format (this only formats the answer for output, doesn't set the value)        :
        int size = ePositive + eNegative + eZero;
        System.out.println(String.format("%.6f", (double)ePositive / size));
        System.out.println(String.format("%.6f", (double)eNegative / size));
        System.out.println(String.format("%.6f", (double)eZero / size));  }

}

public class Solution {
    public static void main(String[] args) throws IOException {
        BufferedReader bufferedReader = new BufferedReader(new InputStreamReader(System.in));

        int n = Integer.parseInt(bufferedReader.readLine().trim());

        List<Integer> arr = Stream.of(bufferedReader.readLine().replaceAll("\\s+$", "").split(" "))
            .map(Integer::parseInt)
            .collect(toList());

        Result.plusMinus(arr);

        bufferedReader.close();
    }
}
